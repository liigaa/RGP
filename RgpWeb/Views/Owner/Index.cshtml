@model IEnumerable<OwnerRequestModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Zemes īpašnieki</h2>
        </div>
        <div class="col-6 text-end
">
            <a asp-controller="Owner" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp;
                Pievienot zemes īpašnieku
            </a>
        </div>
    </div>
    <br/> <br/>


<table class="table table-bordered table-striped" style="width: 100%">
    <thead>
    <tr>
        <th>
            Vārds, Uzvārds/Nosaukums
        </th>
        <th>
            Īpašuma kopplatība
        </th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var obj in Model)
    {
        <tr>
            <td width="30%">
                @obj.OwnerName
            </td>
            <td width="30%">
                @obj.LandArea
            </td>
            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-contoller="Owner" asp-action="Edit" asp-route-id="@obj.Id"
                       class="btn btn-secondary mx-2"><i class="bi bi-pencil-square"></i>Labot</a>
                </div>
            </td>
            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-contoller="Owner" asp-action="Redirect" asp-route-id="@obj.Id"
                       class="btn btn-info mx-2"><i class="bi bi-eye"></i>Skatīt</a>
                </div>
            </td>
            </tr>
    }
    </tbody>
</table>
</div>