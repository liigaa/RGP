@using RgpWeb.Enums
@model Owner
@{
    ViewData["Title"] = "Īpašnieki";
}

@using (Html.BeginForm("Create", "Owner"))
{
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Pievienot zemes īpašnieku</h2>
            <br/>
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.FullName)
            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.FullName, null, new { @class = "text-danger" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.RegNumber)
            @Html.TextBoxFor(m => m.RegNumber, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.RegNumber, null, new { @class = "text-danger" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.OwnerType)
            @Html.DropDownListFor(m => m.OwnerType,
                new SelectList(Enum.GetValues(typeof(OwnerType))),
                "Izvēlēties",
                new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.OwnerType, null, new { @class = "text-danger" })
        </div>
        <br/>
            <button type="submit" class="btn" style="width: 150px; background-color: #e6c371">Pievienot</button>
        <a href="@Url.Action("Index", "Owner")" class="btn btn-success" style="width: 150px">Atgriezties</a>
    </div>
}

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}