@using RgpWeb.Enums
@model CreatePropertyViewModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Pievienot īpašumu</h2>
            <hr/>
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.PropertyName, new
            {
                @class = "col-form-label"
            })
            @Html.TextBoxFor(m => m.PropertyName, new { @class = "form-control"})
            @Html.ValidationMessageFor(m => m.PropertyName, null, new {@class="text-danger"})
        </div>
        <div class="mb-3">
            @Html.LabelFor(m => m.PropertyNumber, new
            {
                @class = "col-form-label"
            })
            @Html.TextBoxFor(m => m.PropertyNumber, new { @class = "form-control"})
            @Html.ValidationMessageFor(m => m.PropertyNumber,null, new { @class ="text-danger"})
        </div>
        <div class="mb-3">
            @*<label asp-for="PropertyStatus">Status</label>*@
            @Html.LabelFor(m => m.PropertyStatus, new
            {
                @class = "col-form-label"
            })
            @Html.DropDownListFor(m => m.PropertyStatus,
                new SelectList(Enum.GetValues(typeof(PropertyStatus))),
                "Izvēlēties",
                new { @class = "form-control"})
            @Html.ValidationMessageFor(m => m.PropertyStatus,null, new { @class ="text-danger"})
        </div>
        @Html.HiddenFor(p => p.OwnerId)
        <br/>
        <button type="submit" class="btn btn-primary" style="width: 150px">Pievienot</button>
        <a asp-controller="Property" asp-action="Index" class="btn btn-secondary" asp-route-id="@Model.OwnerId" style="width: 150px">Atgriezties</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
    }

